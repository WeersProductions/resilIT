extends layout

mixin ticket(ticket)
  if ticket
    .ticket
      div.content
        h2 ResilIT Ticket
        p Showing this ticket at the entrance will grant you access to the event. If you lose this ticket you can re-print it from the website by logging in.

        .ticket-details
          if ticket.ownedBy
            .detail
              label Visitor
              strong= ucfirst(user.firstname) + ' ' + user.surname
          .detail
            label Activationcode
            strong #{ticket._id}

        .ticket-details
          .barcode
            - var imgStr = "/tickets/" + ticket._id + "/barcode"
            img(src=imgStr)

        .ticket-details
          .detail
            p!= "Opening at 09:00 </br> November 26, 2019"
          .detail.quintor
            img(src='/images/partners/logo_NEDAP_hero_rgb.png')

      div.aside
        img(src='/images/resilit_logo.png', style="width: 60%; height: auto")

      br(clear='all')

block content
  div
    +ticket(ticket)
